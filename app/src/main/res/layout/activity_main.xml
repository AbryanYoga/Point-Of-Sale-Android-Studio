<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvnama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tvwelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="welcome"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvnama"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvwelcome"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardMoney"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="20dp"
            android:backgroundTint="#1A1D23"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardTransaksi"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="50dp"
            app:layout_constraintTop_toBottomOf="@id/cardMoney"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@id/cardMoney"
            android:backgroundTint="#FFB925"
            app:layout_constraintEnd_toStartOf="@id/cardLaporan"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardLaporan"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="50dp"
            app:layout_constraintTop_toBottomOf="@id/cardMoney"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FFB925"
            app:layout_constraintStart_toEndOf="@id/cardTransaksi"
            android:layout_marginStart="30dp"
            app:layout_constraintEnd_toStartOf="@id/cardLayanan"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardLayanan"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="50dp"
            app:layout_constraintTop_toBottomOf="@id/cardMoney"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FFB925"
            app:layout_constraintStart_toEndOf="@id/cardLaporan"
            android:layout_marginStart="30dp"
            app:layout_constraintEnd_toStartOf="@id/cardPegawai"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardPegawai"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="50dp"
            app:layout_constraintTop_toBottomOf="@id/cardMoney"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FFB925"
            app:layout_constraintStart_toEndOf="@id/cardLayanan"
            android:layout_marginStart="30dp"
            app:layout_constraintEnd_toStartOf="@id/Printer"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/Printer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="50dp"
            app:layout_constraintTop_toBottomOf="@id/cardMoney"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FFB925"
            app:layout_constraintStart_toEndOf="@id/cardPegawai"
            android:layout_marginStart="30dp"
            app:layout_constraintEnd_toEndOf="@id/cardMoney"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>